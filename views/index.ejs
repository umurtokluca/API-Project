<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokemon Team Builder</title>
    <link rel="stylesheet" type="text/css" href="main.css">
</head>
<body>
    <div class="container">
        <h1 class="title">Pokemon Team Builder</h1>

        <div class="buttons">
            <form action="/add" method="POST">
                <select name="pokemon" id="pokemonSelect">
                <% if (names.length > 0) { %>
                    <% names.forEach(function(name) { %>
                    <option value="<%= name %>"><%= name %></option>
                    <% }) %>
                <% } else { %>
                    <option disabled>No names available</option>
                <% } %>
                </select>
                <button type="submit">Add Pokemon</button>
            </form>

            <form action="/clear" method="POST" style="margin-top: 10px;">
                <button type="submit">Clear All</button>
            </form>
        </div>

        <div class="pokemon-container">
            <% cards.forEach(function(card) { %>
                <div class="pokemon-card">
                    <h2><%= card.name %></h2>
                    <div><%= card.type %><% if (card.type2) { %> / <%= card.type2 %> <% } %></div>
                    <div>
                        <img src="<%= card.sprite %>" alt="<%= card.name %>">
                    </div>
                    <form action="/clear-self" method="POST" style="margin-top: 10px;">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>